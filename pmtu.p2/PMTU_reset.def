//
// Too Big Mesg
//

FEM_icmp6_packet_too_big(
	icmp6_TooBigMesg_1280_for_1500_someone,
	_HETHER_tn2nut,
        	{
		_SRC(v6("3ffe:501:ffff:105::1"));
                _DST(v6merge(   NUT_GLOBAL_UCAST_PRFX, 
                                GLOBAL_UCAST_PRFXLEN, 
                                nutv6())); 
	},
		{
		MTU=1280;
		payload=TooBigData_1280_for_frag_1500_someone;
	}
)


Payload TooBigData_1280_for_frag_1500_someone {
    data=substr(_PACKET_IPV6_NAME(echo_reply_1500_someone),0,1232);
}

