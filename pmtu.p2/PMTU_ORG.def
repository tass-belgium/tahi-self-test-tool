	ra,
	_HETHER_tn2allnodes,
		{
		_SRC(tnv6());
		_DST(v6(_LLOCAL_ALLNODES_MCAST_ADDR));
		HopLimit=255;
	},
		{
		CurHopLimit=254;
		LifeTime=3600;
		ReachableTime=0;
		RetransTimer=1005;
