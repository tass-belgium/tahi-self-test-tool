#define	IS_ROUTER_LINK0		1

#include "./CommonHost.def"

#ifndef	FRAG_ID
#define	FRAG_ID	any
#endif

#ifdef FRAG_DEF
#include "pkt_frag.def"
#endif


//
// ICMP echo request
//

FEM_icmp6_echo_request(
	echo_request1280,
	_HETHER_tn2nut,
	{
		_SRC(TN2_GL2_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_1232;
	}
)


//
// ICMP echo reply
//

FEM_icmp6_echo_reply(
	echo_reply1280,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN2_GL2_ADDR);
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_1232;
	}
)


//
// Payload Data
//

Payload echo_data_1232 {
	data = repeat(0x01, 256);
	data = repeat(0x02, 256);
	data = repeat(0x03, 256);
	data = repeat(0x04, 256);
	data = repeat(0x05, 208);
}


//
// ICMPv6 Packet Too Big message
//

FEM_icmp6_packet_too_big(
	PktTooBig512,
	_HETHER_tn2nut,
	{
		_SRC(TR1_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
	},
	{
		MTU = 1279;
		payload = TooBigData1280;
	}
) 

Payload TooBigData1280 {
	data=substr(_PACKET_IPV6_NAME(echo_reply1280), 0, 1232);
}


//
// Fragmented Packet
//

FEM_hdr_ipv6_exth(
	echo_reply1280_frag,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN2_GL2_ADDR);
	},
	{
		header = _HDR_IPV6_NAME(echo_reply1280_frag);
		exthdr = frag1280_1;
		upper = payload1280_1;
	}
)

Hdr_Fragment frag1280_1 {
	NextHeader = 58;
	FragmentOffset = 0;
	MFlag = 0;
	Identification = any;
}

Payload payload1280_1 {
	data = substr(_PACKET_IPV6_NAME(echo_reply1280), 40, 1240);
}
