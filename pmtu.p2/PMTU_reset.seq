vSend($IF,na);

# Send trigger packet
vClear($IF);
vSend($IF,echo_request_1500_someone);

%ret=vRecv($IF,5,0,1,
	echo_reply_1500_someone,
	ns_srcGlobal,
	ns);

if( $ret{status} != 0) {
        vLogHTML("TN COULD NOT receive Echo Reply from NUT<BR>");
        vLogHTML('<FONT COLOR="#FF0000">NG</FONT>');
	exit $V6evalTool::exitFail;
}
