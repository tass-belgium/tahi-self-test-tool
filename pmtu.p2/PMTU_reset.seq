        if( $ret{status} != 0) {
            vLogHTML("TN COULD NOT receive Fragmented Echo Reply (2/2 MTU1280) from NUT<BR>");
        }else{
            vLogHTML("TN received Fragmented Echo Reply (2/2 MTU1280) from NUT<BR>");
