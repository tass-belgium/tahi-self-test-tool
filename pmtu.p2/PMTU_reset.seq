    vClear($IF);
    vSend($IF,echo_request_1500_someone);

    %ret=vRecv($IF, 5,0,0,
            echo_reply_1500_someone,
            frag_echo_reply_1500_1st_mtu1280_someone,
            frag_echo_reply_1500_2nd_mtu1280_someone
            );

    if( $ret{status} != 0) {
        vLogHTML("TN COULD NOT receive Echo Reply from NUT<BR>");
