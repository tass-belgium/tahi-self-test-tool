//
// ns
// NUT's link local address 
//           to
// TN's solicited Multicast address or TN's unicast address

FEM_icmp6_ns (
	ns,
	HETHER_nut2tn_oneof,
		{
		_SRC(nutv6());
		_DST(oneof(_IPV6_SOLNODE_MCAST(tnv6()),_IPV6_SOLNODE_MCAST(TN_GLOBAL_ADDRESS),tnv6(),TN_GLOBAL_ADDRESS));
		HopLimit=255;
	},
		{
		TargetAddress=tnv6();
		option=_SLLOPT_nut;
	}
)

