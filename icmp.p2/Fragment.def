FEM_icmp6_echo_reply(
	echo_reply_global_1024,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GLOBAL);
		_DST(TN_GLOBAL);
	},
	{
		Identifier = REQ_ID;
		SequenceNumber = SEQ_NO;
