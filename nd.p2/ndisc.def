_HETHER_define(_HETHER_r02allnodes, ether(R0_MAC),
	v62ethermulti(v6(_ALLNODES_MCAST_ADDR)))

_HETHER_define(_HETHER_any2any,	any,	any)
_HETHER_define(_HETHER_h02nut,	ether(H0_MAC),	nutether())
_HETHER_define(_HETHER_r02nut,	ether(R0_MAC),	nutether())
_HETHER_define(_HETHER_nut2r0,	nutether(),	ether(R0_MAC))
_HETHER_define(_HETHER_h02nutsolnode, ether(H0_MAC),
	_ETHER_SOLNODE_MCAST(nutv6()))
_HETHER_define(_HETHER_nut2h0,        nutether(),    ether(H0_MAC))
_HETHER_define(_HETHER_nut2h0solnode, nutether(),
	_ETHER_SOLNODE_MCAST(v6(H0_LINKLOCAL)))
_HETHER_define(_HETHER_h02allnodes, ether(H0_MAC),
	v62ethermulti(v6(_ALLNODES_MCAST_ADDR)))
_HETHER_define(_HETHER_h02allrouters, ether(H0_MAC),
	v62ethermulti(v6(_ALLROUTERS_MCAST_ADDR)))

_HETHER_define(_HETHER_h12nut,        ether(H1_MAC), nutether())
_HETHER_define(_HETHER_h12nutsolnode, ether(H1_MAC),
	_ETHER_SOLNODE_MCAST(nutv6()))
_HETHER_define(_HETHER_nut2h1, nutether(),    ether(H1_MAC))
_HETHER_define(_HETHER_nut2h1solnode, nutether(),
	_ETHER_SOLNODE_MCAST(v6(H1_LINKLOCAL)))
_HETHER_define(_HETHER_h12allnodes, ether(H1_MAC),
	v62ethermulti(v6(_ALLNODES_MCAST_ADDR)))

Opt_ICMPv6_SLL opt_sll_r0 {
	LinkLayerAddress	= ether(R0_MAC);
}

Opt_ICMPv6_SLL opt_sll_h0 {
	LinkLayerAddress	= ether(H0_MAC);
}

Opt_ICMPv6_SLL opt_sll_h1 {
	LinkLayerAddress	= ether(H1_MAC);
}

Opt_ICMPv6_TLL opt_tll_r0 {
	LinkLayerAddress	= ether(R0_MAC);
}

Opt_ICMPv6_TLL opt_tll_h0 {
	LinkLayerAddress	= ether(H0_MAC);
}

Opt_ICMPv6_TLL opt_tll_h1 {
	LinkLayerAddress	= ether(H1_MAC);
}

//
// NS (unicast) w/ SLL: TN -> NUT
//
////////////////////////////////

FEM_icmp6_ns(
	ndisc_cleanup_ns_tn,
	_HETHER_tn2nut,
	{
		HopLimit	= 255;
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		TargetAddress	= nutv6();
		option		= _SLLOPT_tn;
	}
)

//
// NS (unicast) w/ SLL: TN -> NUT
//
////////////////////////////////

FEM_icmp6_na(
	ndisc_cleanup_na_alt,
	_HETHER_h02allnodes,
	{
		HopLimit	= 255;
		_SRC(tnv6());
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		RFlag		= 1;
		SFlag		= 0;
		OFlag		= 1;
		TargetAddress	= tnv6();
		option		= opt_tll_h0;
	}
)

FEM_icmp6_echo_request(
	ndisc_cleanup_echo_alt,
	_HETHER_h02nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload	= payload8_alt;
	}
)

Payload payload8_alt {
	data	= hexstr("0123456789abcdef", 8);
}

FEM_icmp6_ns(
	ndisc_cleanup_ns,
	_HETHER_h02nut,
	{
		HopLimit	= 255;
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		TargetAddress	= nutv6();
		option		= opt_sll_h0;
	}
)

FEM_icmp6_ns(
	ndisc_cleanup_ns_global,
	_HETHER_h02nut,
	{
		HopLimit	= 255;
		_SRC(tn2v6(LINK0_PREFIX, LINK0_PREFIXLEN));
		_DST(nut2v6(LINK0_PREFIX, LINK0_PREFIXLEN));
	},
	{
		TargetAddress	= nut2v6(LINK0_PREFIX, LINK0_PREFIXLEN);
		option		= opt_sll_h0;
	}
)



//
// NS (unicast) w/ SLL: H0 -> NUT
//
////////////////////////////////

FEM_icmp6_ns(
	ndisc_cleanup_ns_x,
	_HETHER_h12nut,
	{
		HopLimit	= 255;
		_SRC(v6(H0_LINKLOCAL));
		_DST(nutv6());
	},
	{
		TargetAddress	= nutv6();
		option		= opt_sll_h1;
	}
)


FEM_icmp6_na(
	na_any2any,
	_HETHER_any2any,
	{
		_SRC(any);
		_DST(any);
	},
	{
		Code	= stop;
	}
)

FEM_icmp6_ns(
	ns_any2any,
	_HETHER_any2any,
	{
		_SRC(any);
		_DST(any);
	},
	{
		Code	= stop;
	}
)

