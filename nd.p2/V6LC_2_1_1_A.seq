use nd;

BEGIN {}
END   {}

if($V6evalTool::NutDef{'Type'} eq 'router') {
	vLogHTML('<FONT COLOR="#FF0000" SIZE="5"><U><B>Test Setup</B></U></FONT><BR>');
	if(vRemote(
		'route.rmt',
		'cmd=add',
		'prefix=default',
		"gateway=fe80::200:ff:fe00:a0a0",
		"if=$V6evalTool::NutDef{'Link0_device'}"
	)) {
		vLogHTML('<FONT COLOR="#FF0000"><B>route.rmt: Could\'t set route</B></FONT><BR>');
		exitFatal();
		#NOTREACHED
	}

	$NEED_COMMON_CLEANUP = 1;
	$tr1_default = 1;
}

startNdiscWorld($Link0);

vLogHTML('<FONT COLOR="#FF0000" SIZE="5"><U><B>Procedure</B></U></FONT><BR>');

$SeekTime = 0;

my @frames = ('ndisc_mcast_ns_sll_LL', 'ndisc_mcast_ns_sll_GL');

vClear($Link0);

vSend($Link0, 'ndisc_ereq_LL');

my %ret = vRecvWrapper($Link0, $TimeOut, $SeekTime, 0, @frames);

if($ret{'recvCount'}) {
	foreach my $frame (@frames) {
		if($ret{'recvFrame'} eq $frame) {
			flushBuffer($Link0, $TimeOut, $TimeOut);
			exitPass();
		}
	}
}

vLogHTML('<FONT COLOR="#FF0000"><B>Could\'t observe NS</B></FONT><BR>');

exitFail();
#NOTREACHED



