//
// NS (DAD): NUT -> TN
//
////////////////////////////////

FEM_icmp6_ns(
	ndisc_dad_linklocal,
	_HETHER_nut2nutsolnode,
	{
		HopLimit	= 255;
		_SRC(v6(_UNSPEC_ADDR));
		_DST(_IPV6_SOLNODE_MCAST(nutv6()));
	},
	{
		TargetAddress	= nutv6();
	}
)

FEM_icmp6_ns(
	ndisc_dad_global,
	_HETHER_nut2nutsolnode,
	{
		HopLimit	= 255;
		_SRC(v6(_UNSPEC_ADDR));
		_DST(_IPV6_SOLNODE_MCAST(
			nut2v6(LINK0_PREFIX, LINK0_PREFIXLEN)));
	},
	{
		TargetAddress	= nut2v6(LINK0_PREFIX, LINK0_PREFIXLEN);
	}
)

