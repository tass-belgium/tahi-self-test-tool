FEM_icmp6_ra(
	mcast_ra_commonsetup,
	_HETHER_r02allnodes,
	{
		HopLimit	= 255;
		_SRC(v6(R0_LINKLOCAL));
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		CurHopLimit	= 64;
		MFlag	= 0;
		OFlag	= 0;
		LifeTime	= 20;
		ReachableTime	= 100000;
		RetransTimer	= 1000;
		option	= opt_prefix_link0_default;
	}
)

FEM_icmp6_echo_request(
	setup_echo_request,
	_HETHER_r02nut,
	{
		_SRC(v6(R0_LINKLOCAL));
		_DST(nutv6());
	},
	{
		payload	= setup_echo_data8;
	}
)

FEM_icmp6_echo_reply(
	setup_echo_reply,
	_HETHER_nut2r0,
	{
		_SRC(nutv6());
		_DST(v6(R0_LINKLOCAL));
	},
	{
		payload	= setup_echo_data8;
	}
)

Payload setup_echo_data8 {
	data	= {1, 2, 3, 4, 5, 6, 7, 8};
}

