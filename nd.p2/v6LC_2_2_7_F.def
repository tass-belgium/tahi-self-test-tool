#include "./common.def"
#include "./rdisc.def"

Opt_ICMPv6_Prefix local_opt_prefix_link0_default {
	PrefixLength		= LINK0_PREFIXLEN;
	LFlag			= _Default_AdvOnLinkFlag;
	AFlag			= _Default_AdvAutonomousFlag;
	ValidLifetime		= _Default_AdvValidLifetime;
	PreferredLifetime	= _Default_AdvPreferredLifetime;
	Prefix			= v6("fec0::");
}

FEM_icmp6_ra(
	ra_local,
	_HETHER_nut2allnodes,
	{
		HopLimit	= 255;
		_SRC(nutv6());
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		CurHopLimit	= 64;
		MFlag		= 0;
		OFlag		= 0;
		HFlag		= 0;
		Preference	= 0;
		LifeTime	= 1800;
		ReachableTime	= 0;
		RetransTimer	= 0;
		option		= local_opt_prefix_link0_default;

	}
)

