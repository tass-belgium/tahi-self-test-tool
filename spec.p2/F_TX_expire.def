#include "./CommonHost.def"

#ifndef	FRAG_ID
#define	FRAG_ID	0x00000100
#endif
#ifndef	REQ_ID
#define	REQ_ID	0x0100
#endif
#ifndef	SEQ_NO
#define	SEQ_NO	0x00
#endif

//======================================================================
// ICMP echo request (original)
//======================================================================

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		Identifier = REQ_ID;
		SequenceNumber = SEQ_NO;
		payload = echo_data80;
	}
)


//
// ICMP echo request (1st fragment)
//

FEM_hdr_ipv6_exth(
	echo_request_1st,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_1st);
		exthdr = frag_1st;
		upper = payload_1st;
	}
)


//
// ICMP echo request (2nd fragment)
//

FEM_hdr_ipv6_exth(
	echo_request_2nd,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_2nd);
		exthdr = frag_2nd;
		upper = payload_2nd;
	}
)


//
// ICMP echo request (3rd fragment)
//

FEM_hdr_ipv6_exth(
	echo_request_3rd,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(NUT_GL0_ADDR);
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_3rd);
		exthdr = frag_3rd;
		upper = payload_3rd;
	}
)


Hdr_Fragment frag_1st {
	NextHeader = 58;
	FragmentOffset = 0;
	MFlag = 1;
	Identification = FRAG_ID;
}

Hdr_Fragment frag_2nd {
	NextHeader = 58;	// ignored
	FragmentOffset = 4;	// 32/8
	MFlag = 1;
	Identification = FRAG_ID;
}

Hdr_Fragment frag_3rd {
	NextHeader = 58;	// ignored
	FragmentOffset = 8;	// 64/8
	MFlag = 0;
	Identification = FRAG_ID;
}

Payload echo_data80 {
	data = repeat(1, 40);
	data = repeat(2, 40);
}

Payload payload_1st {
	data = substr(_PACKET_IPV6_NAME(echo_request), 40, 32);
}

Payload payload_2nd {
	data = substr(_PACKET_IPV6_NAME(echo_request), 72, 32);
}

Payload payload_3rd {
	data = substr(_PACKET_IPV6_NAME(echo_request), 104, 24);
}


//
// ICMP echo reply
//

FEM_icmp6_echo_reply(
	echo_reply,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN_GL0_ADDR);
	},
	{
		Identifier = REQ_ID;
		SequenceNumber = SEQ_NO;
		payload = echo_data80;
	}
)


//
// ICMP Time Exceeded for 1st fragment
//

FEM_icmp6_time_exceeded(
	time_exceeded_1st,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN_GL0_ADDR);
	},
	{
		Code = 1;	// fragment reassembly time exceeded
		payload = any;
	}
)
