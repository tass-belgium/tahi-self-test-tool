#include "./CommonHost.def"

//======================================================================
//
// ICMP echo request (with Extension Header)
//

FEM_icmp6_echo_request_exth(
	echo_request_ex,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_ex);
		exthdr = opt_Pad1;
		upper = _ICMPV6_NAME(echo_request_ex);
	},
	{
		payload = echo_data8;
	}
)


//======================================================================
//
// Pad1
//

Hdr_Destination opt_Pad1 {
	option = _Pad1;
	option = _Pad1;
	option = _Pad1;
	option = _Pad1;
	option = _Pad1;
	option = _Pad1;
}

Opt_Pad1 _Pad1 {
}


//======================================================================
//
// ICMP echo reply
//

FEM_icmp6_echo_reply(
	echo_reply,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		payload = echo_data8;
	}
)


