#include "./CommonHost.def"

//======================================================================
//
// ICMP echo request
//

FEM_icmp6_echo_request_exth(
	echo_request_HFD_10,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_HFD_10);
		exthdr = _hbh;
		exthdr = _frg;
		exthdr = _dst_10;
		upper = _ICMPV6_NAME(echo_request_HFD_10);
	},
	{
		payload = echo_data5;
	}
)


//======================================================================
//
// Extension Headers
//

Hdr_HopByHop _hbh {
	option = _PadN_4;
}

Hdr_Fragment _frg {
	NextHeader = 60;
	FragmentOffset = 0;
	MFlag = 0;
	Identification  = 104;
}

Hdr_Destination _dst_10 {
	option = _type10;
}

Opt_PadN _PadN_4 {
	pad = {0, 0, 0, 0};
}

Opt_ANY _type10 {
	OptionType = 135;
	data = {0, 0, 0, 0};
}


//
// data
//

Payload echo_data5 {
	data = {1, 2, 3, 4, 5};
}


//======================================================================
//
// ICMP Parameter Problem
//

FEM_icmp6_parameter_problem(
	icmperr_with_pointer_0x3a,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 2;	// unrecognized IPv6 option encounted
		Pointer = 0x3a;	// (40+8+8+2)
		payload = any;
	}
)

FEM_icmp6_parameter_problem(
	icmperr_with_pointer_0x32,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 2;	// unrecognized IPv6 option encounted
		Pointer = 0x32;	// (40+8+2) the fragment header in Echo Request is discarded by reassembly.
		payload = any;
	}
)
