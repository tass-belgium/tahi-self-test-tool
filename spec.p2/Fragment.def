//----------------------------------------------------------------------
// Payload Data
//----------------------------------------------------------------------

Payload echo_data1024byAA {
	data = repeat(0xa1, 512);
	data = repeat(0xa2, 512);
}

Payload echo_data1024byBB {
	data = repeat(0xb1, 512);
	data = repeat(0xb2, 512);
}

Payload echo_data1024 {
	data = repeat(1, 512);
	data = repeat(2, 512);
}
