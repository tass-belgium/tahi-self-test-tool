//
// param_problem
//
// - Parameter Problem (unrecognized IPv6 option encountered)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_parameter_problem(
	param_problem,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 2;        // unrecognized IPv6 option encountered
		Pointer = 42;    // Hdr Ext Len
		payload = err;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(echo_request_badex), 0);
}

//
// echo_request
//
// - Echo Request
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload = echo_data8;
	}
)

//
// echo_request_badex
//
// - Echo Request (PadN with bad Opt Data Len)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request_exth(
	echo_request_badex,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(echo_request_badex);
		exthdr = opt_badPadN;
		upper = _ICMPV6_NAME(echo_request_badex);
	},
	{
		payload = echo_data8;
	}
)

Hdr_Destination opt_badPadN {
	option = _badPadN;
}

Opt_PadN _badPadN {
	OptDataLength = 100;
	pad = {0, 0, 0, 0};
}

//
// echo_request_ex
//
// - Echo Request (PadN)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request_exth(
	echo_request_ex,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(echo_request_ex);
		exthdr = opt_PadN;
		upper = _ICMPV6_NAME(echo_request_ex);
	},
	{
		payload = echo_data8;
	}
)

Hdr_Destination opt_PadN {
	HeaderExtLength = 0;
	option = _PadN;
}

Opt_PadN _PadN {
	pad = {0, 0, 0, 0};
}

Payload echo_data8 {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}

//
// multicast_ns
//
// - Multicast Neighbor Solicitation
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_ns(
	multicast_ns,
	_HETHER_nut2tnsolnode,
	{
		_SRC(oneof(nutv6(), nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN, "Link0")));
		_DST(_IPV6_SOLNODE_MCAST(tnv6()));
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

