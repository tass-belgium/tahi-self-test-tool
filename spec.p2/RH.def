// Payload Data
//

Upp_NoNext apl {
}


//======================================================================
//
// NS and NA for Link0 (Link Local)
//

FEM_icmp6_ns(
	ns_from_link0_ll,
	_HETHER_nut2tnsolnode,
	{
		_SRC(nutv6());
		_DST(_IPV6_SOLNODE_MCAST(tnv6()));
		HopLimit = 255;
	},
	{
		TargetAddress = TN_GL0_ADDR;
		option = _SLLOPT_nut;
	}
)

FEM_icmp6_na(
	na_to_link0_ll,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		RFlag = TN_LINK0_ROUTER;
		SFlag = 1;
		OFlag = 1;
		TargetAddress = TN_GL0_ADDR;
		option = _TLLOPT_tn;
	}
)

