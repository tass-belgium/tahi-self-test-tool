FEM_hdr_ipv6_exth(
	echo_request59_from_link1,
	_HETHER_nut2tn,
	{
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
		NextHeader = 59;
	},
	{
		header = _HDR_IPV6_NAME(echo_request59_from_link1);
