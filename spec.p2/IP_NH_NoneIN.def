FEM_hdr_ipv6_exth(
	echo_request59_from_link1,
	_HETHER_nut2tn,
	{
		_SRC(nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN));
		_DST(tn2v6(_GLOBAL10_UCAST_PRFX, _GLOBAL10_UCAST_PRFXLEN));
	},
	{
		header	= _HDR_IPV6_NAME(echo_request59_from_link1);
		upper	= _PACKET_IPV6_NAME(echo_request59_from_link1_inner);
	}
)

FEM_hdr_ipv6_exth(
	echo_request59_from_link1_inner,
	_HETHER_nut2tn,
	{
		NextHeader	= 59;
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
	},
	{
		header	= _HDR_IPV6_NAME(echo_request59_from_link1_inner);
		upper	= nextNone;
	}
)
#endif	// HAS_MULTIPLE_INTERFACES

//----------------------------------------------------------------------
// Payload Data
//----------------------------------------------------------------------

Payload echo_data8 {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}

Upp_NoNext nextNone {	// echo request
	data = {0x80, 0x00, 0xdf, 0xa0, 0x00, 0x00, 0x00, 0x00,
		0x01, 0x02, 0x03, 0x04 ,0x05, 0x06, 0x07, 0x08};
}
