#define XXX_HAS_ONE_INTERFACES

#include "./CommonRouter.def"
#include "../AdvancedFunctionality.def"

//
// ICMP echo request
//

FEM_icmp6_echo_request(
	echo_request59_to_link0,
	_HETHER_tn2nut,
	{
		_SRC(TN_GL0_ADDR);
		_DST(TN_GL1_ADDR);
		NextHeader = 59;
		HopLimit = 255;
	},
	{
		Checksum = 0xdfa0;
		payload = echo_data8;
	}
)

